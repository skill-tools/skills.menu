---
import '../styles/global.css';
import Analytics from '@vercel/analytics/astro';

interface Props {
	title: string;
	description?: string;
}

const { title, description } = Astro.props;

const nav = [
	{ label: 'Try It', href: '/try' },
	{ label: 'Specification', href: '/docs/specification' },
	{ label: '@skill-tools/core', href: '/docs/core' },
	{ label: 'skill-tools CLI', href: '/docs/skill-tools' },
	{ label: '@skill-tools/router', href: '/docs/skillrouter' },
	{ label: '@skill-tools/gen', href: '/docs/skillgen' },
];

const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="description" content={description ?? `${title} — skills.menu documentation`} />
		<meta name="generator" content={Astro.generator} />

		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;600;700&family=Inter:wght@400;500;600&display=swap"
			rel="stylesheet"
		/>

		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title} — skills.menu</title>
	</head>
	<body>
		<header>
			<div class="header-inner">
				<a href="/" class="logo">
					<span class="logo-cursor"></span>
					skills.menu
				</a>
				<nav class="nav-links">
					<a href="/docs/core">Docs</a>
					<a href="/docs/specification">Spec</a>
					<a href="/try">Try It</a>
					<a href="https://github.com/skill-tools/skill-tools" target="_blank" rel="noopener">GitHub</a>
				</nav>
			</div>
		</header>

		<div class="docs-layout">
			<aside class="sidebar">
				<div class="sidebar-label">// documentation</div>
				<nav class="sidebar-nav">
					{nav.map((item) => (
						<a
							href={item.href}
							class:list={['sidebar-link', { active: currentPath === item.href || currentPath === item.href + '/' }]}
						>
							{item.label}
						</a>
					))}
				</nav>
			</aside>

			<article class="docs-content">
				<slot />
			</article>
		</div>

		<footer>
			<div class="footer-inner">
				<span>Built for <a href="https://agentskills.io" target="_blank" rel="noopener">agentskills.io</a></span>
				<span>Apache-2.0 · <a href="https://github.com/skill-tools/skill-tools" target="_blank" rel="noopener">GitHub</a> · <a href="https://www.npmjs.com/org/skill-tools" target="_blank" rel="noopener">npm</a></span>
			</div>
		</footer>
		<Analytics />
	</body>
</html>

<style>
	header {
		border-bottom: 1px solid var(--border);
		padding: 1rem 0;
		position: sticky;
		top: 0;
		background: var(--bg);
		z-index: 100;
	}

	.header-inner {
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 0 2.5rem;
	}

	.logo {
		font-weight: 700;
		font-size: 0.95rem;
		color: var(--text);
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	.logo:hover { text-decoration: none; color: var(--text); }

	.logo-cursor {
		display: inline-block;
		width: 8px;
		height: 16px;
		background: var(--blue);
		animation: blink 1s step-end infinite;
	}

	@keyframes blink { 50% { opacity: 0; } }

	.nav-links { display: flex; gap: 1.5rem; }
	.nav-links a { font-size: 0.78rem; color: var(--muted); }
	.nav-links a:hover { color: var(--text); text-decoration: none; }

	.docs-layout {
		display: grid;
		grid-template-columns: 220px 1fr;
		gap: 3rem;
		padding: 3rem 2.5rem 4rem;
		min-height: 100vh;
	}

	.sidebar { position: sticky; top: 4rem; align-self: start; }

	.sidebar-label {
		font-size: 0.62rem;
		text-transform: uppercase;
		letter-spacing: 0.08em;
		color: var(--dim);
		margin-bottom: 0.75rem;
		padding-left: 0.75rem;
	}

	.sidebar-nav { display: flex; flex-direction: column; gap: 0.15rem; }

	.sidebar-link {
		display: block;
		padding: 0.5rem 0.75rem;
		border-radius: 6px;
		font-size: 0.82rem;
		color: var(--muted);
		transition: all 0.15s ease;
	}

	.sidebar-link:hover { color: var(--text); background: var(--bg2); text-decoration: none; }
	.sidebar-link.active { color: var(--blue); background: var(--blue-bg); }

	.docs-content { max-width: 900px; line-height: 1.7; }

	.docs-content :global(h1) { font-size: clamp(1.5rem, 3vw, 2rem); margin-bottom: 0.75rem; }
	.docs-content :global(h2) { font-size: 1.15rem; margin-top: 3rem; margin-bottom: 1rem; padding-bottom: 0.5rem; border-bottom: 1px solid var(--border); }
	.docs-content :global(h3) { font-size: 0.95rem; margin-top: 2rem; margin-bottom: 0.75rem; }
	.docs-content :global(p) { margin-bottom: 1rem; color: var(--muted); font-family: var(--font-body); font-size: 0.9rem; }
	.docs-content :global(a) { color: var(--blue); }
	.docs-content :global(a:hover) { text-decoration: underline; }
	.docs-content :global(strong) { color: var(--text); font-weight: 600; }
	.docs-content :global(ul), .docs-content :global(ol) { margin-bottom: 1rem; padding-left: 1.5rem; color: var(--muted); font-family: var(--font-body); font-size: 0.9rem; }
	.docs-content :global(li) { margin-bottom: 0.4rem; }
	.docs-content :global(pre) { background: var(--bg2); border: 1px solid var(--border); border-radius: 8px; padding: 1rem 1.25rem; margin-bottom: 1.5rem; overflow-x: auto; font-size: 0.8rem; line-height: 1.7; }
	.docs-content :global(code) { font-family: var(--font); }
	.docs-content :global(table) { width: 100%; border-collapse: collapse; margin-bottom: 1.5rem; font-size: 0.82rem; }
	.docs-content :global(th) { text-align: left; padding: 0.6rem 0.75rem; border-bottom: 2px solid var(--border); color: var(--text); font-weight: 600; font-size: 0.75rem; text-transform: uppercase; letter-spacing: 0.04em; }
	.docs-content :global(td) { padding: 0.5rem 0.75rem; border-bottom: 1px solid var(--border); color: var(--muted); font-family: var(--font-body); font-size: 0.85rem; }
	.docs-content :global(blockquote) { border-left: 3px solid var(--blue); padding: 0.75rem 1rem; margin-bottom: 1rem; background: var(--blue-bg); border-radius: 0 6px 6px 0; }
	.docs-content :global(blockquote p) { margin-bottom: 0; }
	.docs-content :global(em) { color: var(--muted); }

	footer { border-top: 1px solid var(--border); padding: 2rem 0; }

	.footer-inner {
		display: flex;
		justify-content: space-between;
		align-items: center;
		font-size: 0.72rem;
		color: var(--dim);
		padding: 0 2.5rem;
	}

	.footer-inner a { color: var(--muted); }
	.footer-inner a:hover { color: var(--text); }

	@media (max-width: 768px) {
		.header-inner { padding: 0 1.25rem; }
		.nav-links { display: none; }
		.docs-layout { grid-template-columns: 1fr; gap: 1.5rem; padding: 2rem 1.25rem 3rem; }
		.sidebar { position: static; }
		.sidebar-nav { flex-direction: row; overflow-x: auto; gap: 0.35rem; padding-bottom: 0.5rem; }
		.sidebar-link { white-space: nowrap; font-size: 0.78rem; }
		.sidebar-label { display: none; }
		.footer-inner { flex-direction: column; text-align: center; gap: 0.5rem; padding: 0 1.25rem; }
	}
</style>
