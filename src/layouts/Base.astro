---
import '../styles/global.css';
import Analytics from '@vercel/analytics/astro';

interface Props {
	title: string;
	description?: string;
}

const { title, description = 'Developer toolkit for SKILL.md files. Parse, validate, lint, score, and route agent skills.' } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="description" content={description} />
		<meta name="generator" content={Astro.generator} />

		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;600;700&family=Inter:wght@400;500;600&display=swap"
			rel="stylesheet"
		/>

		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<header>
			<div class="header-inner">
				<a href="/" class="logo">
					<span class="logo-cursor"></span>
					skills.menu
				</a>
				<nav class="nav-links">
					<a href="/demo">Demo</a>
					<a href="/docs/core">Docs</a>
					<a href="/docs/specification">Specification</a>
					<a href="https://github.com/skill-tools/skill-tools" target="_blank" rel="noopener">GitHub</a>
				</nav>
			</div>
		</header>

		<main>
			<slot />
		</main>

		<footer>
			<div class="footer-inner">
				<span>Built for <a href="https://agentskills.io" target="_blank" rel="noopener">agentskills.io</a></span>
				<span>Apache-2.0 · <a href="https://github.com/skill-tools/skill-tools" target="_blank" rel="noopener">GitHub</a> · <a href="https://www.npmjs.com/org/skill-tools" target="_blank" rel="noopener">npm</a></span>
			</div>
		</footer>

		<Analytics />
	</body>
</html>

<style>
	header {
		border-bottom: 1px solid var(--border);
		padding: 1rem 0;
		position: sticky;
		top: 0;
		background: var(--bg);
		z-index: 100;
	}

	.header-inner {
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 0 2.5rem;
	}

	.logo {
		font-weight: 700;
		font-size: 0.95rem;
		color: var(--text);
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	.logo:hover { text-decoration: none; color: var(--text); }

	.logo-cursor {
		display: inline-block;
		width: 8px;
		height: 16px;
		background: var(--blue);
		animation: blink 1s step-end infinite;
	}

	@keyframes blink { 50% { opacity: 0; } }

	.nav-links { display: flex; gap: 1.5rem; }
	.nav-links a { font-size: 0.78rem; color: var(--muted); }
	.nav-links a:hover { color: var(--text); text-decoration: none; }

	footer {
		border-top: 1px solid var(--border);
		padding: 2rem 0;
	}

	.footer-inner {
		display: flex;
		justify-content: space-between;
		align-items: center;
		font-size: 0.72rem;
		color: var(--dim);
		padding: 0 2.5rem;
	}

	.footer-inner a { color: var(--muted); }
	.footer-inner a:hover { color: var(--text); }

	@media (max-width: 768px) {
		.header-inner { padding: 0 1.25rem; }
		.nav-links { display: none; }
		.footer-inner { flex-direction: column; text-align: center; gap: 0.5rem; padding: 0 1.25rem; }
	}
</style>
