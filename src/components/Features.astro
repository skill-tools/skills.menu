<section class="features-section">
<div class="container">
	<div class="section-label">// packages</div>
	<div class="pkg-list">
		<div class="pkg-item">
			<div class="pkg-name">@skill-tools/core</div>
			<div class="pkg-desc">Parser, types, tokenizer, and file resolver</div>
			<div class="pkg-type">library</div>
		</div>
		<div class="pkg-item">
			<div class="pkg-name">skill-tools</div>
			<div class="pkg-desc">Validate, lint, and score SKILL.md files</div>
			<div class="pkg-type">cli</div>
		</div>
		<div class="pkg-item">
			<div class="pkg-name">@skill-tools/router</div>
			<div class="pkg-desc">BM25 full-text search to route queries to skills</div>
			<div class="pkg-type">library</div>
		</div>
		<div class="pkg-item">
			<div class="pkg-name">@skill-tools/gen</div>
			<div class="pkg-desc">Generate from OpenAPI specs or text descriptions</div>
			<div class="pkg-type">cli + lib</div>
		</div>
	</div>
</div>
</section>

<style>
	.features-section { padding: 0; }

	.pkg-list { display: flex; flex-direction: column; }

	.pkg-item {
		display: grid;
		grid-template-columns: 195px 1fr auto;
		align-items: baseline;
		padding: 0.85rem 0;
		border-bottom: 1px solid var(--border);
		gap: 1rem;
	}

	.pkg-item:first-child { border-top: 1px solid var(--border); }

	.pkg-name {
		font-size: 0.8rem;
		font-weight: 600;
		color: var(--blue);
	}

	.pkg-desc {
		font-family: var(--font-body);
		font-size: 0.82rem;
		color: var(--muted);
	}

	.pkg-type {
		font-size: 0.65rem;
		color: var(--dim);
		white-space: nowrap;
	}

	@media (max-width: 768px) {
		.pkg-item { grid-template-columns: 1fr; gap: 0.2rem; }
		.pkg-type { display: none; }
	}
</style>
