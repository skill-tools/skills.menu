<style>
	.marquee-section {
		padding: 1rem 0;
		border-top: 1px solid var(--border);
		border-bottom: 1px solid var(--border);
		overflow: hidden;
	}

	.marquee-track {
		display: flex;
		gap: 2.5rem;
		animation: marquee 40s linear infinite;
		white-space: nowrap;
	}

	.marquee-item {
