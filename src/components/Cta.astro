<style>
	.cta { position: relative; z-index: 10; padding: 6rem 0; }

	.cta-inner {
		background: var(--bg2);
		border: 1px solid var(--border);
		border-radius: 16px;
		padding: clamp(2.5rem, 5vw, 4rem);
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 2rem;
		flex-wrap: wrap;
	}

	.cta-text h2 { font-size: clamp(1.5rem, 3vw, 2.25rem); letter-spacing: -0.02em; margin-bottom: 0.5rem; }
	.hl-g { color: var(--green); }
	.hl-p { color: var(--pink); }
	.cta-text p { color: var(--muted); font-size: 0.95rem; max-width: 440px; line-height: 1.7; }
	.cta-actions { display: flex; gap: 0.75rem; flex-wrap: wrap; }

	@media (max-width: 900px) {
		.cta-inner { flex-direction: column; text-align: center; }
		.cta-actions { justify-content: center; }
	}
	@media (max-width: 768px) { .cta { padding: 4rem 0; } }
</style>
